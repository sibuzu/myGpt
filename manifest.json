{
  "manifest_version": 3,
  "name": "MyGPT Extension",
  "version": "1.0",
  "description": "Send selected text to ChatGPT",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}